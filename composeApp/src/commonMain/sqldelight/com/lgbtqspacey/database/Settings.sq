CREATE TABLE IF NOT EXISTS Settings (
    isDarkMode TEXT NOT NULL DEFAULT "true",
    isAutoUpdate TEXT NOT NULL DEFAULT "true"
);

updateIsDarkTheme:
INSERT OR REPLACE INTO Settings(isDarkMode)
VALUES (?);

updateIsAutoUpdate:
INSERT OR REPLACE INTO Settings(isAutoUpdate)
VALUES (?);

getSettings:
SELECT * FROM Settings;

deleteSettings:
DELETE FROM Settings;
