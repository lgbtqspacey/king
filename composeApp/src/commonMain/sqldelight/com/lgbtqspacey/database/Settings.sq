CREATE TABLE IF NOT EXISTS Settings (
    id INTEGER PRIMARY KEY NOT NULL,
    isDarkMode TEXT,
    isAutoUpdate TEXT
);

INSERT OR REPLACE INTO Settings(id, isDarkMode, isAutoUpdate)
VALUES (1, "true", "true");

updateIsDarkTheme:
UPDATE Settings
SET isDarkMode = ?
WHERE id = 1;

updateIsAutoUpdate:
UPDATE Settings
SET isAutoUpdate = ?
WHERE id = 1;

getSettings:
SELECT * FROM Settings
WHERE id = 1;

deleteSettings:
DELETE FROM Settings;
